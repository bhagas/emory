<% include ../../template-backoffice/header.ejs %>

<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
  <div class="header">
    <h2><strong>Input</strong>&nbsp;Product</span></h2>
    <div class="breadcrumb-wrapper">
      <ol class="breadcrumb">
        <li><a href="/">Dashboard</a></li>
        <li><a href="/product/">Management Product</a></li>
        <li class="active">Input</li>
      </ol>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel">
        <div class="panel-header header-line">
          <!-- Notifikasi -->
        </div>
        <div class="panel-content">
          <div class="row">
            <div class="col-md-12">

              <!-- Start form -->
              <form role="form" action="/product/submit_insert" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label>Product Category </label>
                  <div class="row">
                    <div class="col-md-6">
                      <select class="form-control" name="id_kategori" id="">
                        <option value="">--- Choose ---</option>
                        <% for(var i=0; i<data.length; i++){ %> 
                        <option value="<%= data[i]['id']%>"><%= data[i]['kategori']%></option>
                        <% }%>   

                       </select>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Code </label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="text" class="form-control" name="kode" id="">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Description </label>
                  <div class="row">
                    <div class="col-md-8">
                      <textarea class="form-control" rows="5" name="deskripsi" id=""></textarea>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Length </label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="text" class="form-control" name="length" id="">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Width </label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="text" class="form-control" name="width" id="">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Height </label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="text" class="form-control" name="height" id="">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Weight </label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="text" class="form-control" name="weight" id="">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Upload Product Image</label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="file" name="foto" id="">
                    </div>
                  </div>
                </div>

              <button type="submit" class="btn btn-primary btn-embossed">Submit</button>
            </form>
            <!-- End form -->
              
            </div>
          </div>
        </div>
      </div>
    </div>  
  </div>
  <div class="footer">
    <div class="copyright">
      <p class="pull-left sm-pull-reset">
        <span>Copyright <span class="copyright">Â©</span> 2016 </span>
        <span>PT Emory Langgengjaya</span>.
      </p>
    </div>
  </div>
</div>
<!-- END PAGE CONTENT -->

