<% include ../../template-backoffice/header.ejs %>

<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
  <div class="header">
    <h2><strong>Edit</strong>&nbsp;User</h2>
    <div class="breadcrumb-wrapper">
      <ol class="breadcrumb">
        <li><a href="/">Dashboard</a></li>
        <li><a href="/user">List User</a></li>
        <li class="active">Edit User</li>
      </ol>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel">
        <div class="panel-header header-line">
          <!-- Notifikasi -->
        </div>
        <div class="panel-content">
          <div class="row">
            <div class="col-md-12">

              <!-- Start form -->
              <form role="form" action="/user/submit_edit" method="POST" enctype="multipart/form-data">
                <input type="hidden" class="form-control" id="" name="id_user" value="<%= data[0]['id_user'] %>">
                <div class="form-group">
                  <label>Username</label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="text" class="form-control" id="" name="username" value="<%= data[0]['username'] %>" placeholder="Nama">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Password</label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="password" class="form-control" id="" name="pwd" placeholder="Isi kembali dengan password lama, apabila anda tidak ingin menggantinya">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Nama Lengkap</label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="text" class="form-control" id="" name="fullname"  value="<%= data[0]['fullname'] %>">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>NIP</label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="text" class="form-control" id="" name="NIP" value="<%= data[0]['NIP'] %>">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Email</label>
                  <div class="row">
                    <div class="col-md-6">
                      <input type="text" class="form-control" id="" name="email" value="<%= data[0]['email'] %>">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Telepon</label>
                  <div class="row">
                    <div class="col-md-6"><input type="text" class="form-control" id="" name="telp" value="<%= data[0]['telp'] %>"></div>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary btn-embossed">Update</button>
              </form>
              <!-- End start form -->

            </div>
          </div>         
        </div>
      </div>
    </div>  
  </div>
  <div class="footer">
    <div class="copyright">
      <p class="pull-left sm-pull-reset">
        <span>Copyright <span class="copyright">Â©</span> 2016 </span>
        <span></span>.
      </p>
    </div>
  </div>
</div>
<!-- END PAGE CONTENT -->

<% include ../../template-backoffice/footer.ejs %>